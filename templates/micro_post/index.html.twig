{% extends 'base.html.twig' %}

{% block title %}All Posts{% endblock %}

{% block body %}
<!-- grid sets elements in a grid, sm/xl behaviour at different screen sizes -->
<div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-4">
  {% if posts|length > 0 %}
    {% for post in posts %}
    <!-- this passes the post object to _post.html.twig so that file has access to that object -->
    {{ include('/micro_post/_post.html.twig', {post: post})}}
    {% endfor %}
  {% else %}
    There's nothing here yet!
  {% endif %}
</div>

{% endblock %}
